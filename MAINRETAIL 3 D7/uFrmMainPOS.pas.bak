          IDModel                   := GetFieldValue('IDModel');
          IDStore                   := DM.fStore.ID;
          Qty                       := StrToFloatDef(QtyEdit.Text, 1);
          IDUser                    := iIDUser;
          IDCommission              := iIDCommission;
          PreSaleDate               := quPreSaleInfoPreSaleDate.AsDateTime;
          IDItemExchange            := 0;
          IDPreInventoryMovParent   := 0;
          IDPreInventoryMov         := 0;
          PromoSellingPrice         := 0;
          Discount                  := 0;
          Promo                     := False;
          AskedSalePrice            := False;
          Department                := NewIDDepartment;
          Barcode                   := Text;

          if DM.fSystem.SrvParam[PARAM_USE_ESTIMATED_COST] then
            CostPrice := GetFieldValue('ReplacementCost')
          else
          begin
            if DM.fSystem.SrvParam[PARAM_MARKUPOVERCOST] then
              CostPrice := GetFieldValue('VendorCost')
            else
              CostPrice := GetFieldValue('AvgCost');
          end;

          hasStoreSellingPrice := false;
          if (GetFieldValue('StoreSellingPrice') <> 0) then begin
            SellingPrice := GetFieldValue('StoreSellingPrice');
            hasStoreSellingPrice := true;
          end
          else
          begin
            if (GetFieldValue('PromotionPrice') <> 0) then
              SellingPrice := GetFieldValue('PromotionPrice')
            else
              SellingPrice := GetFieldValue('SellingPrice');
          end;

          KitSellingPrice := DM.fPOS.GetKitPrice(IDModel, Qty, SellingPrice, bEmpty, IDPreSale, hasStoreSellingPrice );

          CustomerSellingPrice := DM.FDMCalcPrice.FormatPrice((SellingPrice - (DM.fPOS.CalcCustomerDiscount(IDCustomer, IDModel, Qty, SellingPrice)/Qty)));

          if  ( FCountPuppies > 1 ) then begin
               Application.MessageBox(
               'Only one pet may be sold at a time when PuppyTracker integration is enabled.', 'Sale Limited', mb_OK+mb_IconStop );
               edtBarcode.Clear;

               if edtBarcode.CanFocus then //YAA (April 25, 2012): Condition added for safety
                 edtBarcode.SetFocus;

               exit;
          end;

          if GetFieldValue('PackModelAddItems') then begin
              with TFrmAddKitItems.Create(Self) do begin
                  //amfsouza 10.06.2011 - count dogs to each line

                (*
                  OpenKitItem(FSaleItem.IDModel, FSaleItem.IDStore); // one hack.
                  CheckPuppy;
                  if ( IsDog ) then
                      inc(FCountPuppies);

                 *)

                  // amfsouza May 18, 2012 start was changed to common kits.
                  bKitItemResult := Start(FSaleItem, FCountPuppies);
              end; //end with

              if bKitItemResult then begin
                 if quPreSaleInfo.FieldByName('IDCustomer').AsInteger = 1 then begin
                    SetCustomer(FSaleItem.IDCustomer);
                    RefreshCustomer;
                 end;

                 UpdatePuppyTrackerInfo;
                 RefreshItem(FSaleItem.IDPreInventoryMov);
              end;

              Clear;
              SetFocus;
              Exit;
          end; // end packmodel

          lblTotalSaved.Visible := true;
          dbTotalSaved.Visible  := true;

          Qty := dQty;

          // Antonio 2013 Oct 28, MR-80
          if FReturn then
          begin
            edtBarcode.Color := $00F8E1DC;
            shBarcode.Pen.Color := $00D2771C;
            FReturn := False;
            lblTotalSaved.Visible := false;
            dbTotalSaved.Visible  := false;
          end;

          if FApplyPromoOnSale then
          begin
              if not FSaleItem.Promo and
                 (edtBarcode.GetFieldValue('CustomSalePrice') or
                 (DM.fSystem.SrvParam[PARAM_ASK_SALEPRICE] and (SellingPrice = 0))) then
                 begin
                   AdjustSellingPrice(cSellingPrice);
                   SellingPrice    := cSellingPrice;
                   FSaleItem.AskedSalePrice := True;
                 end;

              Add;

              if DiscountSaleValue <> 0 then
                SetDiscountItem(FSaleItem, DiscountSaleValue, DM.fSystem.SrvParam[PARAM_TAX_EXEMPT_ON_SALE]);


          end
          else
          begin
            // Se pede preco de venda, chama o formulario FrmAskPrice
            if edtBarcode.GetFieldValue('CustomSalePrice') or (DM.fSystem.SrvParam[PARAM_ASK_SALEPRICE] and (SellingPrice = 0))then
            begin
              AdjustSellingPrice(cSellingPrice);
              SellingPrice := cSellingPrice;
              FSaleItem.AskedSalePrice := True;
            end;

            Add;
          end;

          RefreshItem(FSaleItem.IDPreInventoryMov);

          if (Qty < 0) then begin

            // Antonio 2013 Oct 28
            if ( fReturn ) then begin
               if ( (trim(edtBarcode.Text) <> '') and (trim(edtInvoiceSearch.Text) = '') ) then
                   // Antonio June 20, 2013
                   dealRefundToItemWithoutInvoice(fSaleItem.IDPreInventoryMov);
            end;

          end;

        end;

(*  //amfsouza 02.02.2012 - only to debug
        debugtoFile('IdModel = ' + intToStr(FsaleItem.idmodel) );
        debugToFile('Quantity = ' + floatToStr(FSaleItem.Qty) );
        DebugToFile('cost price = ' + floatToStr(FsaleItem.CostPrice) );
        debugToFile('Selling Price = ' + floatToStr(FsaleItem.SellingPrice) );
        debugToFile('Customer Selling Price = ' + floatToStr(FsaleItem.CustomerSellingPrice) );
        debugToFile('Subtotal = ' + spquPreSaleValueSubTotal.AsString);
        debugToFile('Tax = ' + spquPreSaleValueTax.AsString);
        DebugToFile('Item Discount = ' + spquPreSaleValueItemDiscount.AsString);
        DebugToFile('Other costs = ' + spquPreSaleValueAditionalExpenses.AsString);
        debugToFile('Total discount =  ' + spquPreSaleValueTotalDiscount.AsString);
        DebugToFile('Total = ' + spquPreSaleValueTotalInvoice.AsString);

        DebugToFile('');
        DebugToFile('');
        DebugToFile('');
*)
        //amfsouza May, 29 2012
        if ( spquPreSaleValueInvoiceDiscount.Value > 0 ) then begin
           totalDiscountToPolleDisplay :=  spquPreSaleValueTotalDiscount.Value +
                                 spquPreSaleValueInvoiceDiscount.Value;
        end
        else totalDiscountToPolleDisplay := spquPreSaleValueTotalDiscount.Value;

        //Poll Display
        DM.PollDisplayInvInfo(quPreSaleInfoSaleCode.AsString,
                              Trunc(quPreSaleInfoPreSaleDate.AsDateTime),
                              spquPreSaleValueAditionalExpenses.AsCurrency,
                              totalDiscountToPolleDisplay, // amfsouza May 29, 2012 spquPreSaleValueTotalDiscount.AsCurrency,
                              spquPreSaleValueTax.AsCurrency,
                              spquPreSaleValueSubTotal.AsCurrency);

        DM.PollDisplayAddItem(FSaleItem.IDPreInventoryMov,
                              FSaleItem.IDModel,
                              spquPreSaleItemModel.AsString,
                              spquPreSaleItemDescription.AsString,
                              FSaleItem.Qty,
                              FSaleItem.SellingPrice,
                              FSaleItem.Discount);
      end
      else
      begin //YAA: It crashes here if we scan the same item too fast
        if (DM.fSystem.VersionType <> QuotedStr(SYSTEM_CLIENT_TYPE)) and Password.HasFuncRight(69) then
        begin
          if (MsgBox(MSG_INF_MODEL_NOT_FOUND_CREATE, vbQuestion + vbYesNo) = vbYes) then
          begin
            sBarcode := CreateNewModel(edtBarcode.Text);
            if sBarcode <> '' then
            begin
              Clear;
              Text := sBarcode;
              DoKeyPress(#13);
            end;
          end
          else
          begin
            Clear;
            btnSearchModelClick(Self);
          end;
        end
        else
        begin
          Clear;
          //MsgBox(MSG_INF_BARCODE_NOT_FOUND, vbCritical + vbOkOnly);
          btnSearchModelClick(Self);
        end;

      end;

      Clear;

      if CanFocus then //YAA (April 25, 2012): Condition added for safety
        SetFocus;
    end;

    dm.fMRMercury.QtyToRemove := 0;

    CalledSerialNumberScreen := false;
    if ( iSerialNumberGroup(FSaleItem.IDModel) ) then
       SetSerialNumber(trunc(dqty));

    //amfsouza 01.19.2012
    if ( dm.fMRMercury.QtyToRemove > 0 ) then begin

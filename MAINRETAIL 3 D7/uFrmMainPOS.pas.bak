procedure TFrmMainPOS.NewPromo(fIDPreInventoryMov, fIDPreSale, fIDCustomer : Integer;
                               fCoupon : String;
                               fPreSaleDate : TDateTime;
                               fIsLoyalty : Boolean;
                               fSubTotalSale : double);
var
  //amfsouza October 4, 2012
  boughtIdPreInventoryMov: Integer;
  qrySaleItemCommision: TADOQuery;

  //amfsouza august 31, 2012
  sp: TADOStoredProc;
  discountPriceBreak: Currency;

  //amfsouza September 12, 2012
  IdPreInventoryMov: Integer;
  //tmpSaleItem: TSaleItem;
  iError: Integer;
begin
  ResetDiscount(fIDPreSale);

  FFrmPromoControl.FCoupon := fCoupon;

  //Calcula a promoo nos Itens
  FFrmPromoControl.ApplySalePromo(fIDPreSale, fIDCustomer,
                                  fPreSaleDate,
                                  fIsLoyalty, dm.fPOS.cdsPriceBreak);
  //Calcula a Promoo no Total
  FFrmPromoControl.CalcPromoTotal(fIDPreSale,
                                    fIsLoyalty,
                                    fSubTotalSale);
  RefreshItem(fIDPreInventoryMov);

  //amfsouza august 31, 2012
  //verify list and update price to price break even after promo.
  if ( dm.fPOS.cdsPriceBreak.RecordCount > 0 ) then begin
      sp := dm.fPOS.getItemPreSaleDetail(fIdPreSale);

      while ( not sp.eof ) do begin
          IdPreInventoryMov := sp.fieldByname('IdInventoryMov').Value;
          discountPriceBreak := 0;

          //amfsouza septemper 07, 2012 - internal price break from promo related to cdsPriceBreak from fPOS.
          FFrmPromoControl.CdsPriceBreak.Filter := 'IdModel = ' + sp.fieldByName('ModelID').AsString + ' and IsPriceBroke = true';
          FFrmPromoControl.CdsPriceBreak.Filtered := true;

          if ( FFrmPromoControl.CdsPriceBreak.recordcount > 0 ) then begin
             //amfsouza - just if promo has free item
             if ( FFrmPromoControl.CdsPriceBreak.FieldByName('FoundItemFree').AsBoolean ) then begin
                 //get SaleItemCommision detail to same model ( just item sale, not free item )
                 if (sp.FieldByName('Qty').Value = FFrmPromoControl.CdsPriceBreak.FieldByName('QtyToItemFree').value ) then begin
                     discountPriceBreak := FFrmPromoControl.CdsPriceBreak.fieldByName('PriceBreak').Value;

                     //amfsouza October 4, 2012 - to fix sales person x commision
                     qrySaleItemCommision := dm.fPOS.getSaleItemCommision(boughtIdPreInventoryMov);
                     DM.RunSQL('DELETE FROM SaleItemCommission WHERE IDPreInventoryMov = ' + intToStr(IdPreInventoryMov) );
                     dm.fPOS.AddItemCommission('NULL', inttoStr(IdPreinventoryMov), qrySaleItemCommision.fieldbyname('IdCommission').Value, qrySaleItemCommision.fieldbyname('CommissionPercent').value);
                     freeAndNil(qrySaleItemCommision);
                 end
                 else begin
                      boughtIdPreInventoryMov := sp.fieldByname('IdInventoryMov').value;
                 end;
             end;

             dm.fPOS.UpdateHoldItem(fsaleItem.IDPreSale,
                                    sp.fieldByName('IdInventoryMov').value,//fsaleItem.IDPreInventoryMov,
                                    sp.fieldByName('ModelID').value, //fSaleItem.IDModel,
                                    fSaleItem.IDCommission,
                                    fSaleItem.IDUser,
                                    sp.fieldByname('Qty').value,//( spquPreSaleItemQty.Value - dm.fMRMercury.QtyToRemove),

                                    // amfsouza September 20, 2012 - fix discount when > quantity > 1
                                    (discountPriceBreak * sp.fieldByname('Qty').value),
                                    FFrmPromoControl.CdsPriceBreak.fieldByName('PriceBreak').Value,//fSaleItem.SellingPrice,
                                    sp.fieldByName('CostPrice').value,//fSaleItem.CostPrice,
                                    quPreSaleInfoPreSaleDate.AsDateTime,
                                    Now(),
                                    false,
                                    fSaleItem.IsManager,
                                    sp.fieldByName('IdDepartment').value, //fSaleItem.Department,
                                    iError,
                                    IdPreInventoryMov,  //IDPreInvMov,
                                    0,   //FSaleItem.IDPreInventoryMovParent,
                                    sp.fieldByname('Promo').value,  //FSaleItem.Promo,
                                    FSaleItem.IDDescriptionPrice,
                                    FSaleItem.IDVendorPrice,
                                    sp.fieldByName('SuggRetail').value, //FSaleItem.SuggPrice,
                                    FSaleItem.DocumentNumber,
                                    FSaleItem.IDDocumentType);
             //RefreshItem(sp.fieldByName('IdInventoryMov').Value);
             refreshItem(IdPreInventoryMov);
          end;
          sp.Next;
      end;

      freeAndNil(sp);

      dm.fPOS.cdsPriceBreak.EmptyDataSet;
  end;
end;


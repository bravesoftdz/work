  with DM.quFreeSQL do
  try
    if Active then
      Close;
    SQL.Text := 'SELECT IDCustomer FROM Invoice WHERE InvoiceCode = :InvoiceCode AND IDStore = :IDStore';
    Parameters.ParamByName('InvoiceCode').Value := AInvoiceCode;

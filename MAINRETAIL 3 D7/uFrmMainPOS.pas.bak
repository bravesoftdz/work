        Exit;

    dQty := dQty * (-1);

    //amfsouza May 31, 2012 - deal sign to sale or refund
    setSignalDiscount(false, false, true);
    lblTotalSaved.Visible := false;
    dbTotalSaved.Visible  := false;
  end;

  if (btnAdd.Enabled) and (ValidateRefund(dQty)) then
  begin
    with edtBarcode do
    begin
      if SearchResult then
      begin

        if not(DM.ModelRestored(GetFieldValue('IDModel'))) then
         exit;

        if GetFieldValue('CaseQty') > 1 then
        begin
          dQty := dQty * GetFieldValue('CaseQty');

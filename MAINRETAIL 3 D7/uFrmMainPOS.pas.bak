        end;

        NewIDDepartment := GetModelDepartment(GetFieldValue('IDModel'));

        iIDUser       := DM.fUser.ID;
        iIDCommission := DM.fUser.IDCommission;

        if GetFieldValue('AskUserOnSale') then
         with TFrmAskSalesPerson.Create(Self) do
           if not Start(iIDUser, iIDCommission) then
           begin
             iIDUser       := DM.fUser.ID;
             iIDCommission := DM.fUser.IDCommission;
           end;

        with FSaleItem do
        begin
          IDCustomer                := quPreSaleInfoIDCustomer.AsInteger;

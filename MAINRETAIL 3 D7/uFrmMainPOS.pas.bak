    NewPromo(FSaleItem.IDPreInventoryMov,
             FInvoiceInfo.IDPreSale,
             FSaleItem.IDCustomer,
             FCoupon,
             quPreSaleInfo.FieldByName('PreSaleDate').AsDateTime,
             IsLoyalty,
             spquPreSaleValueSubTotal.AsCurrency);

    // Antonio July 05, 2013 - should get rid discount (begin)
    foundMovIDInPromo := false;
    if FSaleItem.IDCustomer <> 1 then begin

        if ( FFrmPromoControl.SaleItemsClone <> nil ) then begin
           if ( not FFrmPromoControl.SaleItemsClone.IsEmpty ) then begin
               FFrmPromoControl.SaleItemsClone.Open;
               if ( not ffrmPromoControl.SaleItemsClone.IsEmpty ) then begin
